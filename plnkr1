
/******************************
HELPER FUNCTIONS
******************************/
function printLog(selector, message){
	document.querySelector(selector).innerHTML += message + "<br>";
}


/******************************
PART 1:
******************************/
var firstName, lastName;
firstName = "anonymous";

function setName() {
	printLog('#prePartOne', "setName called():");
	firstName = prompt('What is your first name?');
	printLog('#prePartOne', `  firstName assigned to ${firstName}`);
	lastName = prompt('What is your last name?');
	printLog('#prePartOne', `  lastName assigned to ${lastName}`);
}
function greetUser() {
	var displayName = firstName + " " + lastName;
	alert("Hello " + displayName + "!");
	printLog('#prePartOne', `greetUser called(): ${displayName}`);
}
function printName() {
	var fullName = firstName + " " + lastName;
	document.querySelector('#fullName').innerText = fullName;
	printLog('#prePartOne', `printName called(): ${fullName}`);
}
function resetPartOne() {
	firstName = "wonderful";
	lastName = "walrus";
  document.querySelector('#fullName').innerText = "unknown person";
	document.querySelector('#prePartOne').innerHTML = "History:<br><br>";
}

function makeFullName(first, last) {
	return first + " " + last;
}


/******************************
PART 2:
******************************/
var username = "no username";
var email;

function updateUsername(){
	printLog("#prePartTwo", "updateUsername called():");
	username = document.querySelector('#username').value;
	printLog("#prePartTwo", `  username assigned to ${username}`);
}
function updateEmail(event) {
	printLog("#prePartTwo", "updateEmail called():");
	email = event.target.value;
	printLog("#prePartTwo", `  email assigned to ${email}`);
}
function printInfo() {
	document.querySelector('#userInfo').innerHTML = `<strong>${username} - <em>${email}</em></strong>`;
	printLog("#prePartTwo", `printInfo called(): ${username} - ${email}`);
}
function resetInfo() {
	var usernameElement = document.querySelector('#username');
	usernameElement.value = "";
	document.querySelector('#email').value = "";
	document.querySelector('#userInfo').innerText = "unknown person";
	document.querySelector('#prePartTwo').innerHTML = "History:<br><br>";

	usernameElement.focus();
}


/******************************
PART 3:
******************************/
var preEl = document.querySelector('#prePartThree');
var mysteryEl = document.querySelector('body>div:nth-child(2) .row:last-child button');
// What element does this select?

function printElementPartialData(element) {
	printLog('#prePartThree', `tagName:   ${element.tagName}`);
	printLog('#prePartThree', `id:        ${element.id}`);
	printLog('#prePartThree', `src:       ${element.src || "none"}`);
	printLog('#prePartThree', `className: ${element.className}`);
	printLog('#prePartThree', `onclick:   ${element.onclick || "none"}`);
	printLog('#prePartThree', `----------`);
}

function showImageData() {
	printElementPartialData(document.querySelector('#animalImage'));
}
function showParentData() {
	printElementPartialData(document.querySelector('#animalImageParent'));
}
function showImageViaParent() {
	var parentEl = document.querySelector('#animalImageParent');
	var childEl = parentEl.children[0];

	printElementPartialData(childEl);
}
function showParentViaImage() {
	var childEl = document.querySelector('#animalImage');
	var parentEl = childEl.parentElement;

	printElementPartialData(parentEl);
}
function showButtonData(event) {
	printElementPartialData(event.target);
}
function changeImage() {
	var imgEl = document.querySelector('#animalImage');
	imgEl.src = "http://i.imgur.com/0JOTJaG.gif";
}
function resetPartThree() {
	document.querySelector('#animalImage').src = "http://i.imgur.com/JsSy77q.gif";
	document.querySelector('#prePartThree').innerHTML = "INFO:<br><br>";
}


/******************************
PART 4: EXTRA - CHALLENGE
This section pushes what we've learned so far as well as things we've learned, but in a slightly more alien context.
The key here is to look for patterns of things we do know to try and infer what is going on.
******************************/

function getSelectValue(event) {
	var selectEl = document.querySelector('#coffee');
	return selectEl.value;
}
function getRadioValue(event) {
	var radioEl = document.querySelector('[name="whichDrink"]:checked');
	return radioEl.value;
}
function getCheckboxValues() {
	var checkboxEls = document.querySelectorAll('#coffeeTime input[type="checkbox"]:checked');
	var times = [];
	for (var checkboxElement of checkboxEls) {
		times.push(checkboxElement.value);
	}
	return times;
}
function printTagsHTML() {
	var kindOfCoffee = getSelectValue();
	var timesToDrink = getCheckboxValues();
	var preferToDrink = getRadioValue();

	var tagsHTML = "";
			tagsHTML += `<span class="label label-primary">${ preferToDrink }</span> `;
			tagsHTML += `<span class="label label-info">${ kindOfCoffee }</span> `;
			for (var time of timesToDrink) {
				tagsHTML += `<span class="label label-default">${ time }</span> `;
			}

	document.querySelector('.tags').innerHTML = tagsHTML;
}

function characterTyped(e) {
	var pEl = document.getElementById('realTimeStory');
	pEl.innerHTML = e.target.value;
	pEl.nextElementSibling.classList.remove('hidden');
}
function editingOff(bananaEvent) {
	var pEl = document.querySelector('[id="realTimeStory"]');
	pEl.nextElementSibling.classList.add('hidden');
}

function saveCoffee(banana) {
	var spanEl = document.querySelector('#realTimeStory').nextElementSibling;

	if (banana.type === "click" || banana.key === "Enter") {
		spanEl.innerText = "SAVED";
		spanEl.className  = "label label-success";

		(banana.key === "Enter") && banana.preventDefault();
	} else {
		spanEl.innerText = "EDITING";
		spanEl.className  = "label label-warning";
	}

	printTagsHTML();
}
function resetCoffee(event) {
	var selectEl = document.querySelector('#coffee');
			selectEl.value = "";

	var radioEl = document.querySelectorAll('[name="whichDrink"]');
			radioEl[0].checked = true;

	var checkboxEls = document.querySelectorAll('#coffeeTime input[type="checkbox"]:checked');
			for (var checkbox of checkboxEls) {
				checkbox.checked = false;
			}
	var textareaEl = document.querySelector('textarea');
			textareaEl.value = "";

	var realTimeStoryEl = document.getElementById('realTimeStory');
			realTimeStoryEl.innerHTML = "No Content";
			realTimeStoryEl.nextElementSibling.innerText = "";

	document.querySelector('.tags').innerHTML = "";
}


